<Window x:Class="TeamBuildingApp.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="201.6" Width="365.6" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Background="#FFC5D7F8" Margin="0,0,0.4,0">
        <Grid HorizontalAlignment="Left" Height="182" Margin="10,10,0,0" VerticalAlignment="Top" Width="345" Background="White">
            <ProgressBar x:Name="progLoad" HorizontalAlignment="Left" Height="23" Margin="33,88,0,0" VerticalAlignment="Top" Width="285" Maximum="4" Background="{x:Null}" Value="1">
                <ProgressBar.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFC5D7F8" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
            <Label Content="Generating...." HorizontalAlignment="Left" Height="38" Margin="10,18,0,0" VerticalAlignment="Top" Width="193" FontSize="20"/>
        </Grid>

    </Grid>
</Window>
